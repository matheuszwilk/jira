generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tasks {
  id          String @id @default(cuid())
  name        String
  assigneeId  Int
  dueDate     String
  description String
  workspaceId String
  projectId   String
  stauts      Status @default(BACKLOG)
}

model projects {
  id          String @id @default(cuid())
  name        String
  imageUrl    String
  workspaceId String
}

model members {
  id          String @id @default(cuid())
  userId      String
  workspaceId String
  role        Role   @default(MEMBER)
}

model workspaces {
  id         String @id @default(cuid())
  name       String
  imageUrl   String
  inviteCode String
  userId     String
}

model users {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
}

enum Role {
  MEMBER
  ADMIN
}

enum Status {
  BACKLOG
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}
